		<script>
			// Improved Search Logic
			const searchInput = document.getElementById('foodSearch') as HTMLInputElement;
			searchInput?.addEventListener('input', (e) => {
				const term = (e.target as HTMLInputElement).value.toLowerCase();
				const items = document.querySelectorAll('.food-item');
				let hasResults = false;

				items.forEach(item => {
					const name = (item as HTMLElement).dataset.name?.toLowerCase() || '';
					if (name.includes(term)) {
						(item as HTMLElement).style.display = 'flex';
						hasResults = true;
					} else {
						(item as HTMLElement).style.display = 'none';
					}
				});

				// Hide empty categories during search
				document.querySelectorAll('.food-category').forEach(cat => {
					const visibleItems = (cat as HTMLElement).querySelectorAll('.food-item:not([style*="display: none"])');
					(cat as HTMLElement).style.display = visibleItems.length > 0 ? 'block' : 'none';
				});
			});
		</script>
